package com.kungeek.hszcrm.infrastructure.util;

import java.io.IOException;
import java.util.Properties;

import org.apache.commons.logging.Log;
import org.apache.commons.logging.LogFactory;
import org.springframework.stereotype.Component;

@Component
public class HszCrmConfig {
	private static final Log log = LogFactory.getLog(HszCrmConfig.class); 

	  static{
		Properties prop = new Properties();
		try {
			prop.load(HszCrmConfig.class.getClassLoader().getResourceAsStream("crm.properties"));
			log.info(HszCrmConfig.class.getClassLoader().getResourceAsStream("crm.properties"));
			log.info(HszCrmConfig.class.getClassLoader().getResource("crm.properties").getPath());
      
			FstpSdkConfig.FTSP_CIPHERTEXT = prop.getProperty("crm.ftsp_sdk_ciphertext");
			FstpSdkConfig.FTSP_CHANNEL = prop.getProperty("crm.ftsp_sdk_channel");
			FstpSdkConfig.FTSP_USERNAME= prop.getProperty("crm.ftsp_sdk_user_name");
		} catch (IOException e) {
			log.error("",e);
		}
	}
	
}
