package com.kungeek.ftsp.api.infrastructure.core.mvc.handler.requestargs;

import java.lang.annotation.Documented;
import java.lang.annotation.ElementType;
import java.lang.annotation.Retention;
import java.lang.annotation.RetentionPolicy;
import java.lang.annotation.Target;

/**
 * Ftsp自定义返回JSON注解。
 * <p>如果变量的名字与请求的参数名一致，则不需要填写value，否则需要指定</p>
 * <p>示例：</p>
 * <ul>
 * <li>变量名与请求参数名一致，集合为List
 * <pre>
 * public void foo(@FtspRequestJson Bar bar){
 * }
 * </pre>
 * </li>
 * <li>变量名与请求参数名不一致
 * <pre>
 * public void foo(@FtspRequestJson(value="theBar") Bar bar){
 * }
 * </pre>
 * </ul>
 *
 * @version 3.1
 * @see FtspJsonMethodArgumentsResolver
 */
@Target(ElementType.PARAMETER)
@Retention(RetentionPolicy.RUNTIME)
@Documented
public @interface FtspRequestJson {

    String value() default "";

    /**
     * Whether the parameter is required.
     * <p>Defaults to {@code true}, leading to an exception being thrown
     * if the parameter is missing in the request. Switch this to
     * {@code false} if you prefer a {@code null} value if the parameter is
     * not present in the request.
     * <p>Alternatively, which implicitly
     * sets this flag to {@code false}.
     */
    boolean required() default true;
}
